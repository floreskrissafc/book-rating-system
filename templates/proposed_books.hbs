<ul id="books_list">
    {{#each books}}
    <li data-name="{{name}}" data-code="{{module_code}}">
        <div class="book_container">
            <div class="book_info_container">
                <div class="book_info">
                    <p class="book_info_text"><b>Course</b>: {{module_code}}-{{name}}</p>
                    <p class="book_info_text"><b>Book title</b>: {{title}}</p>
                    <p class="book_info_text"><b>ISBN</b>: {{ISBN}}</p>
                </div>
            </div>
            <div class="book_btns_container">
                <button type="button" class="remove_book_btn button button_red" data-id="{{id}}">Remove Book</button>
            </div>
        </div>
    </li>
    {{/each}}
</ul>